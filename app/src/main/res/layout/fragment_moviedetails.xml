<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backdrop_view"
        android:src="@drawable/mad_max_poster_w300"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster_view"
        android:src="@drawable/poster"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:elevation="16dp"
        android:translationZ="5dp"
        android:padding="3dp"
        android:background="@color/poster_bg"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/movie_name"
        android:id="@+id/movie_title_textview"
        android:layout_below="@+id/backdrop_view"
        android:layout_toRightOf="@+id/poster_view"
        android:layout_toEndOf="@+id/poster_view"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/movie_name"
        android:id="@+id/movie_info_textview"
        android:layout_below="@+id/movie_title_textview"
        android:layout_alignLeft="@+id/movie_title_textview"
        android:layout_alignStart="@+id/movie_title_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gebbrish"
        android:id="@+id/movie_overview_textview"
        android:layout_below="@+id/poster_view"
        android:layout_alignLeft="@+id/poster_view"
        android:layout_alignStart="@+id/poster_view"
        android:layout_marginLeft="51dp"
        android:minLines="6"
        android:maxLines = "6"
        android:layout_marginStart="51dp"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/info"
        android:layout_alignTop="@+id/movie_overview_textview"
        android:layout_alignLeft="@+id/poster_view"
        android:layout_alignStart="@+id/poster_view"
        android:layout_marginTop="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cast"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/movie_overview_textview"
        android:layout_alignStart="@+id/movie_overview_textview"
        android:layout_marginBottom="35dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/actor_icon"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"/>

    <!--

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_av_play_button"
            app:layout_anchor="@id/posterview"
            app:layout_anchorGravity="bottom|right|end"/>

    -->

</RelativeLayout>
